<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--Chamada de bibliotecas-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--Quando uma view é criada, deve ser adicionado um "ActionLink" para que ela apareça em algum lugar do Layout-->
                    <!--Os parametros estão na seguinte ordem: (Rótulo, Action e Controlador)-->
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Meu Contato", "Contato", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    
    <!--Criando ancora de referência para link, neste caso o Google-->
    <!--Target _blank serve para abrir o link em uma nova guia-->
    <a class="alert-success" href=" http://google.com" target="_blank"> Ir para o Google</a>
    <br/>
   
    <!--Criação de links-->
    
    @Html.ActionLink("Home", "Index", "Home")<br/>
    @Html.ActionLink("About", "About", "Home")<br/>
    @Html.ActionLink("Contact","Contact","Home")<br/>
    @Html.ActionLink("Meu contato", "Contato", "Home")
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
